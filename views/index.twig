<script>
    $().ready(function() {
        $( "#preview" ).bind( "click", function(e) {
            e.preventDefault();
            $("#billform").attr("action", "{{ path('preview') }}");
            $("#billform").attr("target", "BLANK");
            $("#billform").submit();
        });

        $( "#submit-form" ).bind( "click", function(e) {
            e.preventDefault();
            $("#billform").attr("action", "{{ path('save') }}");
            $("#billform").attr("target", "");
            $("#billform").submit();
        });
    });
</script>
</body>
</html>